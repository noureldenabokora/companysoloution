<h1>All Employees</h1>
<br />
<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if(Model.Count() > 0 )
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.Image)</td>
                <td>@Html.DisplayNameFor(D => D.Salary)</td>
                <td>@Html.DisplayNameFor(D => D.IsAcitve)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.Phone)</td>
                <td>@Html.DisplayNameFor(D => D.HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var  employee in Model)
            {
             <tr>
                  <td>@employee.Name</td>
                 <td>@employee.Age</td>
                 <td>@employee.Address</td>
                    <td>
                        <img src="~/files/images/@employee.ImageName"  class="img-fluid rounded" alt="Employee Image" height="30"/>
                        </td>
                 <td>@Html.DisplayFor(D => employee.Salary)</td>
                <td>@Html.DisplayFor(D => employee.IsAcitve)</td>
                 <td>@Html.DisplayFor(D => employee.Email)</td>
                  <td>@employee.Phone</td>
                  <td>@employee.HireDate.Date</td>

                    <partial name="_ButtonPartialView" model="@employee.Id.ToString()"></partial>

             </tr>   
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert-warning">
        <h3>There is No Employee!!</h3>
    </div>
}

