@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<h1>ALL Users</h1>
<br />
<br />

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row-cols-8 offset-1" id="searchForm" >
        <div class="col-8">
            <input type="text" class="form-control" name="email " placeholder="Search By Email" />
         </div> 
         <div class="col-4">
             <input type="submit" value="search" class="btn btn-success" />
         </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => @user.Id)</td>
                    <td>@Html.DisplayFor(m => @user.FName)</td>
                    <td>@Html.DisplayFor(m => @user.LName)</td>
                    <td>@Html.DisplayFor(m => @user.Email)</td>
                    <td>@Html.DisplayFor(m => @user.PhoneNumber)</td>
                    <td>@string.Join(" ", user.Roles)</td>

                    <partial name="_ButtonPartialView" model="@user.Id"></partial>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert-warning">
        <h3>There is No Users !!</h3>
    </div>
}

