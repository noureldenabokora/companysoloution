@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "All Roles";
}

<h1>ALL Roles</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary" >Create New Role </a> 
<div class="row justify-content-center align-items-center mt-3">
    <form asp-action="Index" class="row-cols-8 offset-1" id="searchForm" >
        <div class="col-8">
            <input type="text" class="form-control" name="name " placeholder="Search By Email" />
         </div> 
         <div class="col-4">
             <input type="submit" value="search" class="btn btn-success" />
         </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                 <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => @role.Id)</td>
                    <td>@Html.DisplayFor(m => @role.RoleName)</td>
                
                    <partial name="_ButtonPartialView" model="@role.Id"></partial>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert-warning">
        <h3>There is No Users !!</h3>
    </div>
}

